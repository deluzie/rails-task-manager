<div class="container">
  <h2>Edit Task:</h2>
    <div class="add_task">
      <%= form_for(@task) do |f| %>
        <%= f.label :title %>
        <br>
        <%= f.text_field :title %>
        <br>
        <%= f.label :details %>
        <br>
        <%= f.text_field :details %>
        <br>
        <%= f.check_box :completed %>
        <br>
        <%= f.submit %>
      <% end %>
    </div>
</div>
